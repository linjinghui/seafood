.content > .header {
  padding: 0 20px;
  height: 150px;
  text-align: center;
  background-size: cover;
  background-position: center;
}
.content > .header > image {
    display: inline-block;
    margin-top: 20px;
    margin-bottom: 10px;
    width: 58px;
    height: 58px;
    border: solid 1px #fff;
    border-radius: 50%;
    vertical-align: middle;
}
.content > .header > ._p {
    vertical-align: middle;
    overflow: hidden;
    -o-text-overflow: ellipsis;
       text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 18px;
    color: #fff;
}
.content > .main {
  padding-top: 1px;
  height: calc(100% - 150px - 1px);
  background-color: #f4f5f6;
}
.content > .main .uni-list {
    margin-top: 10px;
    background-color: #fff;
    height: unset;
}
.content > .main .uni-list view {
      height: unset;
}
.content > .main .uni-list .uni-list-item__icon {
      padding-top: 3px;
}

