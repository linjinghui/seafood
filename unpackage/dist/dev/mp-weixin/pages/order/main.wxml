<view class="content" bind:__l="__l"><block wx:if="{{totalPage===0}}"><view class="no-order"><uni-iconfont class="icon" size="50" type="sp" color="#ddd"></uni-iconfont><view class="_p">您还没有下单记录哦~</view></view></block><block wx:else><block wx:for="{{orders}}" wx:for-item="info" wx:for-index="index" wx:key="id"><view data-event-opts="{{[['tap',[['clkOrder',['$0'],[[['orders','id',info.id]]]]]]]}}" class="wrap-order" bindtap="__e"><view class="wrap-header"><text class="status">{{info.status===1?'等待卖家接单':info.status===2?'备货中':info.status===3?'配送中':'已完成'}}</text><text class="time">{{info.time}}</text><uni-icon class="icon" type="arrowright" size="16" color="#999"></uni-icon></view><view class="wrap-list"><block wx:for="{{info.goods}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view class="wrap-item"><image src="{{item.pic}}"></image><text class="name">{{item.name}}</text><text class="count">{{"x "+item.count}}</text></view></block><view class="wrap-item">...<view class="total">{{"共"+info.count+"份，金额"}}<text class="price">{{info.money}}</text></view></view></view><view class="wrap-footer"><block wx:if="{{info.status===1}}"><button data-event-opts="{{[['tap',[['clkDel',[index,'$0'],[[['orders','id',info.id]]]]]]]}}" class="del" catchtap="__e">取消订单</button></block><button>再来一单</button></view></view></block></block><block wx:if="{{totalPage>0}}"><uni-load-more status="{{status}}"></uni-load-more></block></view>