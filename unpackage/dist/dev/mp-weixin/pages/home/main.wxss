.content {
  padding-bottom: 60px;
}
.header {
  width: 100%;
  height: 30px;
  line-height: 30px;
  border-bottom: solid 1px #f0f0f0;
}
.header > ._li {
    position: relative;
    float: left;
    width: 33.33%;
    height: 100%;
    text-align: center;
}
.header > ._li .wrap-icon {
      position: relative;
      display: inline-block;
      width: 20px;
      height: 100%;
      vertical-align: middle;
}
.header > ._li .wrap-icon > .icon {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        margin: auto;
}
.header > ._li .wrap-icon .tick {
        top: -2px;
        left: -6px;
}
.header > ._li .wrap-icon .arrowup {
        top: 2px;
}
.header > ._li .wrap-icon .arrowdown {
        top: 10px;
}
.header > ._li.active {
    color: #029c45;
}
.main {
  height: -webkit-calc(100% - 30px - 60px - 1px);
  height: calc(100% - 30px - 60px - 1px);
  overflow: auto;
}
.main > .scroll-Y {
    height: 100%;
}
.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  padding-left: 10px;
  width: 100%;
  height: 60px;
  line-height: 60px;
  font-size: 16px;
  color: #fff;
  background-color: #333;
  z-index: 3;
}
.footer > image {
    display: inline-block;
    margin-right: 10px;
    width: 40px;
    height: 40px;
    -webkit-border-radius: 50%;
            border-radius: 50%;
    vertical-align: middle;
}
.footer > .total {
    float: right;
    padding: 0 10px;
    font-size: 18px;
}
.footer > button {
    float: right;
    width: 32%;
    height: 100%;
    line-height: inherit;
    -webkit-border-radius: 0;
            border-radius: 0;
    color: inherit;
    background-color: #ff9000;
}
.footer > button:after {
    border: 0;
    -webkit-border-radius: 0;
            border-radius: 0;
}

