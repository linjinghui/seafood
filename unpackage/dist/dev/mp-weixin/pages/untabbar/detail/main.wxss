      height: 40px;
      line-height: 40px;
      text-align: center;
      color: #029c45;
      border-bottom: solid 1px #f0f0f0;
}
.content > view > .title > ._span {
        display: inline-block;
        height: 38px;
        padding: 0 10px;
        border-bottom: solid 2px;
}
.content > view:nth-last-child(1),
  .content > view:nth-last-child(2),
  .content > view:nth-last-child(3) {
    margin: 0;
}
.content > .wrap-good {
    padding-bottom: 14px;
    text-align: center;
}
