.wrap-good-item {
  position: relative;
  padding: 14px 10px;
  padding-left: 0;
  border-bottom: solid 1px #f0f0f0;
  background-color: #fff;
}
.wrap-good-item > .label {
    position: absolute;
    top: 20px;
    left: 10px;
    padding: 2px 8px;
    border-radius: 2px;
    font-size: 12px;
    z-index: 2;
}
.wrap-good-item > .label:nth-child(2) {
    top: 42px;
}
.wrap-good-item > .label:nth-child(3) {
    top: 64px;
}
.wrap-good-item > .wrap-icon {
    position: relative;
    display: inline-block;
    width: 40px;
    height: 100px;
    vertical-align: middle;
}
.wrap-good-item > .wrap-icon > .icon {
      display: block;
      left: inherit;
      width: 26px;
      height: 26px;
      line-height: 26px;
}
.wrap-good-item > .wrap-img {
    position: relative;
    display: inline-block;
    width: 100px;
    height: 100px;
    vertical-align: middle;
}
.wrap-good-item > .wrap-img > image {
      width: 80px;
      height: 80px;
}
.wrap-good-item > .wrap-main {
    display: inline-block;
    width: calc(100% - 100px);
    line-height: 30px;
    vertical-align: middle;
}
.wrap-good-item > .wrap-main > .name {
      display: block;
      font-size: 18px;
}
.wrap-good-item > .wrap-main > .desc {
      display: block;
      color: #aaa;
}
.wrap-good-item > .wrap-main > .unit {
      display: inline-block;
      padding: 2px 8px;
      line-height: 20px;
      border-radius: 2px;
      color: #666;
      background-color: #f6f6f6;
}
.wrap-good-item > .wrap-main > .preferential {
      display: inline-block;
      margin-right: 5px;
      padding: 2px 8px;
      line-height: 20px;
      border-radius: 2px;
      color: #e55e5e;
      background-color: #fce7e7;
}
.wrap-good-item > .wrap-btn {
    position: absolute;
    right: 10px;
    bottom: 15px;
    width: 74px;
    height: 26px;
}
.wrap-good-list.select > .wrap-good-item > .wrap-main {
  width: calc(100% - 40px - 100px);
}
.wrap-good-list.small {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
      -ms-flex-direction: row;
          flex-direction: row;
  -webkit-flex-wrap: wrap;
      -ms-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
}
.wrap-good-list.small > .wrap-good-item {
    padding-left: 10px;
    width: calc(50% - 10px - 10px - 1px);
}
.wrap-good-list.small > .wrap-good-item > .wrap-img {
      display: block;
      margin: 0 auto;
}
.wrap-good-list.small > .wrap-good-item > .wrap-main {
      display: block;
      width: 100%;
}
.wrap-good-list.small > .wrap-good-item > .wrap-btn {
      width: 26px;
      text-align: right;
      overflow: hidden;
}
.wrap-good-list.small > .wrap-good-item > .wrap-btn > .bugBtn {
        float: right;
}
.wrap-good-list.small > .wrap-good-item:nth-child(odd) {
    border-left: solid 1px #f0f0f0;
}

